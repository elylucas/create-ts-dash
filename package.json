{
  "name": "create-ts-dash",
  "version": "0.0.1",
  "description": "Create a new minimal TypeScript project",
  "type": "module",
  "bin": {
    "create-ts-dash": "./dist/index.js"
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "test": "vitest run",
    "test:unit": "vitest run src/",
    "test:e2e": "vitest run e2e/"
  },
  "keywords": [
    "create",
    "typescript",
    "template",
    "starter",
    "cli"
  ],
  "author": "Ely Lucas <ely@meta-tek.net>",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@types/node": "^22.0.0",
    "@types/prompts": "^2.4.9",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "semantic-release": "^25.0.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.0.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "prompts": "^2.4.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elylucas/create-ts-dash"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
